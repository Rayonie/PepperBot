<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Menu1Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/here_are_some_example_for_internshi_with_rp"
        android:textColor="#333333"
        android:drawableStart="@drawable/ic_drop"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_url1"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_url1"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/iv_url2"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_url2"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:id="@+id/iv_url3"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_url3"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click_for_more_information"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                app:shape_solidColor="#87a7d6"
                app:shape_radius="10dp"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_arrow" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_robot" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>